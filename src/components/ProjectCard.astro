---
// src/components/ProjectCard.astro
const { project } = Astro.props;
const { title, description, image, url } = project.data;
---
<div class="bg-gray-800 rounded-lg overflow-hidden flex flex-col md:flex-row gap-8 p-6 transition-transform duration-300 hover:scale-105">
  <img src={image} alt={`Imagen del proyecto ${title}`} class="w-full md:w-1/3 h-auto object-cover rounded-md"/>
  <div class="flex flex-col justify-between items-start">
    <div>
      <h3 class="text-xl font-bold text-white">{title}</h3>
      <p class="text-gray-300 mt-2">{description}</p>
    </div>
    <div class="mt-4">
      <a href={url} target="_blank" class="text-white bg-blue-600 px-5 py-2 rounded-md text-sm font-semibold hover:bg-blue-700 transition">
        View
      </a>
    </div>
  </div>
</div>