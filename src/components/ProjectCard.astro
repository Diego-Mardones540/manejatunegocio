---
// src/components/ProjectCard.astro
const { project } = Astro.props;
const { title, description, image } = project.data;
---
<div class="bg-surface rounded-lg flex flex-col md:flex-row gap-8 p-6 
            border border-transparent hover:border-accent/40 transition-all duration-300 group">
  
  <div class="w-full md:w-1/4">
    <img src={image} alt={`Imagen del proyecto ${title}`} class="w-full h-full object-cover rounded-md"/>
  </div>
  
  <div class="w-full md:w-3/4 flex flex-col justify-between items-start">
    <div>
      <h3 class="text-xl font-bold text-text-primary group-hover:text-accent transition-colors duration-300">{title}</h3>
      <p class="text-text-secondary mt-3">{description}</p>
    </div>
    
    <div class="mt-6">
      <a 
        href={`/projects/${project.slug}/`} 
        class="text-accent font-semibold border border-accent/40 rounded-full px-5 py-2 
               transition-all duration-300 hover:bg-accent hover:text-background"
      >
        Ver detalles
      </a>
    </div>
  </div>
</div>