---
// src/components/ProjectCard.astro
const { project } = Astro.props;
const { title, description, image } = project.data;
---
<div class="bg-surface rounded-lg overflow-hidden flex flex-col md:flex-row gap-8 p-6 transition-transform duration-300 hover:scale-105">
  
  <div class="w-full md:w-1/3">
    <img src={image} alt={`Imagen del proyecto ${title}`} class="w-full h-full object-cover rounded-md"/>
  </div>
  
  <div class="w-full md:w-2/3 flex flex-col justify-between items-start">
    {/* Título y Descripción */}
    <div>
      <h3 class="text-xl font-bold text-text-primary">{title}</h3>
      <p class="text-text-secondary mt-2">{description}</p>
    </div>
    
    {/* Botón */}
    <div class="mt-4">
      <a href={`/projects/${project.slug}/`} class="inline-block text-white bg-accent px-5 py-2 rounded-md text-sm font-semibold hover:bg-accent-hover transition">
        Ver detalles
      </a>
    </div>
  </div>
</div>